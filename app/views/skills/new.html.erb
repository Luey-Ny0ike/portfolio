<h1>Skills you have</h1>

<% if @skills.any?%>
  <ul>
    <% @skills.each do |skill| %>
      <li><%= skill.name %></li>
      <li><%= skill.description %></li>
    <% end %>
  </ul>
<% else %>
<p>No skills yet</p>
<% end %>

<h2>New skill</h2>

<%= form_for @skill do |f| %>
   <%= f.label :name %>
   <%= f.text_field :name %>
   <%= f.label :description %>
   <%= f.text_field :description %>
   <%= f.submit  %>
 <% end %>
