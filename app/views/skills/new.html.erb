<h1>Skills you have</h1>

<% if @skills.any?%>
  <ul>
    <% @skills.each do |skill| %>
     <li><%= link_to skill.name, skill_path(skill) %></li>
   <% end %>
  </ul>
<% else %>
<p>No skills yet</p>
<% end %>

<h2>New skill</h2>

<%= form_for @skill do |f| %>
   <%= f.label :name %>
   <%= f.text_field :name %>
   <%= f.label :description %>
   <%= f.text_field :description %>
   <%= f.submit  %>
 <% end %>
