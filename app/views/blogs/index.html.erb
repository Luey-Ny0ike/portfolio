<h1>Blogs</h1>
<% if @blogs.any? %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Blog</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        <td><%= blog.blog %></td>
        <td><%= link_to 'Show', blog %></td>
        <% if can? :manage, User %>
        <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
        <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% else %>
  <h3>Blog posts coming soon</h3>
<% end %>
<% if can? :manage, User %>
  <%= link_to 'New Blog', new_blog_path %>
<% end %>
